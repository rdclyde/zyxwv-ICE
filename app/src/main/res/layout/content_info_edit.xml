<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/background"
    android:textColor="@color/BodyText"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_infoedit" tools:context="net.zyxwv.ice.InfoEdit">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:background="@color/TitleBg"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ico_ice"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/AppTitle"
                    android:textColor="@color/HeaderText"
                    android:textStyle="bold"
                    android:textSize="24sp"
                    android:layout_marginLeft="5sp"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/sh_MyInfo"
                android:background="@color/HeaderBg"
                android:textColor="@color/HeaderText"
                android:textStyle="bold"
                android:textSize="14sp"
                />
            <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:stretchColumns="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etName"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etAddress"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="City: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etCity"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="State: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etState"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Postal Code: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etPostalCode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Country: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etCountry"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Home Phone: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <EditText
                        android:id="@+id/etHomePhone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </TableRow>
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Photo: "
                        android:gravity="right"
                        android:textColor="@color/BodyText"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/ivPic"
                            android:layout_width="75sp"
                            android:layout_height="70sp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/sticky"/>
                        <Button
                            android:text="Get File"
                            android:id="@+id/bnGetPhoto"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                        </Button>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:gravity="right"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <Button
                    android:text="Save"
                    android:id="@+id/bnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="InfoSave">
                </Button>
                <Button
                    android:text="Cancel"
                    android:id="@+id/bnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                </Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
